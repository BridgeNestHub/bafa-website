  const volunteerFormSuccessMessage = document.getElementById('volunteerFormSuccessMessage');
  const volunteerFormErrorMessage = document.getElementById('volunteerFormErrorMessage');
  const submitVolunteerFormBtn = document.getElementById('submitVolunteerFormBtn');
  const volunteerModal = document.getElementById('volunteerModal');
  const volunteerIntroText = document.getElementById('volunteerIntroText');

  // Initialize modal state on page load
  function resetModalState() {
    volunteerApplicationForm.style.display = 'block';
    volunteerIntroText.style.display = 'block';
    volunteerFormSuccessMessage.classList.add('d-none');
    volunteerFormErrorMessage.classList.add('d-none');
    volunteerApplicationForm.reset();
  }

  // Call it immediately to set initial state
  resetModalState();

  // Reset modal when opened
  volunteerModal.addEventListener('show.bs.modal', resetModalState);

  if (volunteerApplicationForm) {
    volunteerApplicationForm.addEventListener('submit', async function(event) {
      event.preventDefault();

      submitVolunteerFormBtn.disabled = true;
      submitVolunteerFormBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Submitting...';
      volunteerFormSuccessMessage.classList.add('d-none');
      volunteerFormErrorMessage.classList.add('d-none');

      // Collect form data including checkboxes
      const formData = new FormData(this);
      const data = {
        firstName: formData.get('firstName'),
        lastName: formData.get('lastName'),
        email: formData.get('email'),
        phone: formData.get('phone'),
        address: formData.get('address'),
        volunteerInterests: Array.from(document.querySelectorAll('input[name="volunteerInterests"]:checked')).map(el => el.value),
        availability: formData.get('availability'),
        message: formData.get('message')
      };

      try {
        const response = await fetch('/api/volunteer', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        });

        if (response.ok) {
          // Hide the form and intro text, show success message
          volunteerApplicationForm.style.display = 'none';
          volunteerIntroText.style.display = 'none';
          volunteerFormSuccessMessage.classList.remove('d-none');
          
          // Reset form (hidden now but still good practice)
          volunteerApplicationForm.reset();
        } else {
          const errorData = await response.json();
          volunteerFormErrorMessage.textContent = errorData.message || 'There was an error submitting your application.';
          volunteerFormErrorMessage.classList.remove('d-none');
        }
      } catch (error) {
        console.error('Error submitting volunteer form:', error);
        volunteerFormErrorMessage.textContent = 'Network error. Please check your connection and try again.';
        volunteerFormErrorMessage.classList.remove('d-none');
      } finally {
        submitVolunteerFormBtn.disabled = false;
        submitVolunteerFormBtn.textContent = 'Submit Application';
      }
    });
  }
});
</script>

