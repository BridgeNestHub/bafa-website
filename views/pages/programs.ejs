    // Bootcamp Registration Form
    handleAjaxFormSubmission(
        'bootcampRegistrationForm',
        'bootcampRegisterModal',
        '/applications/bootcamp',
        'bootcamp registration',
        'Register Now'
    );

    // Volunteer Application Form
    handleAjaxFormSubmission(
        'volunteerApplicationForm',  // The ID of your form
        'volunteerModal',           // The ID of your modal
        '/api/volunteer', 
        'volunteer application',    // Text for the floating success message
