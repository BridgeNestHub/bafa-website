  <script>
    document.addEventListener('DOMContentLoaded', () => {
    // Reusable function to show a floating success alert
    function showFloatingSuccess(entityName) {
        // Remove any existing floating success box to prevent duplicates
        const existing = document.getElementById('floatingSuccessBox');
        if (existing) {
            existing.remove();
        }

        // Create the success message box
        const box = document.createElement('div');
        box.id = 'floatingSuccessBox';
        box.className = 'alert alert-success shadow-lg position-fixed top-50 start-50 translate-middle text-center';
        box.style.zIndex = 1060; // Ensure it's above Bootstrap modal backdrops
        box.innerHTML = `
            <h4 class="alert-heading">Thank You!</h4>
            <p>Your ${entityName} has been sent successfully.<br>Weâ€™ll respond as soon as possible.</p>
            <a href="/" class="btn btn-outline-success">Return Home</a>
        `;

        document.body.appendChild(box);

        // Optional: Auto-dismiss the success message after a few seconds
        // setTimeout(() => box.remove(), 8000);
    }

    // Generic AJAX form submission handler
    // This function can be used for any form that needs to submit data via AJAX
    function handleAjaxFormSubmission(formId, modalElementId, apiPath, entityName, submitBtnText = 'Submit Inquiry') {
        const form = document.getElementById(formId);
        // Ensure the form exists before attaching event listeners
        if (!form) {
            console.warn(`Form with ID '${formId}' not found. Skipping setup.`);
            return;
        }

        const submitBtn = form.querySelector('button[type="submit"]');
        // Assuming success and error messages are siblings of the form (or in a consistent location)
        const successMessage = document.getElementById(`${formId.replace('Form', '')}SuccessMessage`);
        const errorMessage = document.getElementById(`${formId.replace('Form', '')}ErrorMessage`);
        const modalElement = document.getElementById(modalElementId);
        const modalInstance = modalElement ? bootstrap.Modal.getInstance(modalElement) || new bootstrap.Modal(modalElement) : null;

        // Function to reset the form state (hide messages, show form)
        const resetFormState = () => {
            // Re-show the form content if it was hidden (e.g., for bootcamp form)
            const formContent = form.querySelector('.form-content') || form; // Adjust if your forms have a specific content wrapper
            if (formContent) {
                formContent.style.display = 'block';
            }
            if (successMessage) successMessage.style.display = 'none';
            if (errorMessage) errorMessage.style.display = 'none';
            form.classList.remove('was-validated'); // Clear validation styles
            form.reset(); // Reset form fields
        };

        // Attach listener for modal hide event to reset the form
        if (modalElement) {
            modalElement.addEventListener('hidden.bs.modal', resetFormState);
            // Also reset state when the modal is shown to clear previous attempts
            modalElement.addEventListener('show.bs.modal', resetFormState);
        }

        form.addEventListener('submit', async (event) => {
            event.preventDefault();

            // Perform client-side validation first
            if (!form.checkValidity()) {
                form.classList.add('was-validated');
                if (submitBtn) {
                    submitBtn.disabled = false;
                    submitBtn.textContent = submitBtnText;
                }
                return;
            }
            form.classList.remove('was-validated'); // Clear validation if valid

            if (submitBtn) {
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Submitting...';
            }

            if (successMessage) successMessage.style.display = 'none';
            if (errorMessage) errorMessage.style.display = 'none';

            const formData = new FormData(form);
            const data = {};
            formData.forEach((value, key) => {
                // Special handling for specific fields like 'age' or 'subjects'
                if (key === 'age') {
                    data[key] = Number(value);
                } else if (key === 'subjects') {
                    if (!data[key]) {
                        data[key] = [];
                    }
                    data[key].push(value);
                } else if (key === 'volunteerInterests') { // <-- NEW: Special handling for volunteerInterests
                    if (!data[key]) {
                        data[key] = []; // Initialize as an array if it doesn't exist
                    }
                    data[key].push(value); // Push each selected value into the array
                } else if (key !== 'resumeFile') { // Exclude file inputs if not handled
                    data[key] = value;
                }
            });

            try {
                const response = await fetch(apiPath, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data),
                });

                if (response.ok) {
                    form.reset();
                    // For forms that hide content and show inline success, handle that
                    const formContent = form.querySelector('.form-content');
                    if (formContent) {
                        formContent.style.display = 'none';
                    }
                    if (successMessage) {
                        successMessage.style.display = 'block';
                    }

                    // Hide modal and show floating success if applicable
                    if (modalInstance) {
                        // For forms where the success message is inside the modal (like bootcamp),
                        // we might not want to immediately hide the modal,
                        // unless the requirement is to show the floating success instead.
                        // For consistency with other forms using the floating success, hide the modal.
                         modalInstance.hide();
                         showFloatingSuccess(entityName);
                    } else {
                        // If no modal, just show floating success
                        showFloatingSuccess(entityName);
                    }

                } else {
                    const errorData = await response.json();
                    if (errorMessage) {
                        errorMessage.textContent = errorData.message || 'There was an error submitting your application.';
                        errorMessage.style.display = 'block';
                    }
                }
            } catch (error) {
                console.error(`Error submitting ${formId} form:`, error);
                if (errorMessage) {
                    errorMessage.textContent = 'Network error. Please check your connection and try again.';
                    errorMessage.style.display = 'block';
                }
            } finally {
                if (submitBtn) {
                    submitBtn.disabled = false;
                    submitBtn.textContent = submitBtnText;
                }
            }
        });
    }

    // --- Wire up all your forms using the generic handler ---

    // Enrollment Application Form
    // The original script had a unique way of handling success/error, let's align it.
    handleAjaxFormSubmission(
        'enrollmentApplicationForm',
        'enrollNowModal', // Modal ID
        '/admin/applications/enrollment',
