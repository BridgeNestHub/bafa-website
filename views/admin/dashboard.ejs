                <label for="eventImage" class="form-label">Event Image</label>
                <input type="file" class="form-control" id="eventImage" name="image" accept="image/*">
                <img id="eventImagePreview" class="img-preview mt-2" alt="Image Preview">
              </div>
            </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="eventDate" class="form-label">Date</label>
                <input type="date" class="form-control" id="eventDate" name="eventDate" required>
              </div>
              <div class="col-md-6 mb-3">
                <label for="eventTime" class="form-label">Event Time (Optional)</label>
                <input type="time" class="form-control" id="eventTime" name="eventTime">
              </div>

              <div class="col-md-6 mb-3">
                <label for="eventLocation" class="form-label">Location</label>
                <input type="text" class="form-control" id="eventLocation" name="location" required>
              </div>

              <div class="col-md-6 mb-3">
                <label for="eventSlug" class="form-label">Event URL</label>
                <input type="text" class="form-control" id="eventSlug" name="slug" >
                <small class="form-text text-muted">Event URL.</small>
              </div>

            </div>

            <div class="mb-3">
              <label for="eventContent" class="form-label">Event Description</label>
              <div id="eventContentEditor" style="height: 300px;"></div>
              <textarea class="d-none" id="eventContent" name="content"></textarea> </div>

            <div class="d-flex justify-content-end">
              <button type="submit" class="btn btn-primary">
                <i class="fas fa-calendar-plus me-1"></i> Create Event
              </button>
            </div>
          </form>
        </div>
      </div>

      <div class="card admin-card mb-4" id="create-program">
        <div class="card-header">
          <h5 class="mb-0">Create New Program</h5>
        </div>
        <div class="card-body">
          <form class="form-admin" id="create-program-form">
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="programTitle" class="form-label">Program Title</label>
                <input type="text" class="form-control" id="programTitle" name="title" required>
              </div>
              <div class="col-md-6 mb-3">
                <label for="programSlug" class="form-label">Program Slug (for URL, e.g., 'career-development')</label>
                <input type="text" class="form-control" id="programSlug" name="slug" required>
                <small class="form-text text-muted">A short, unique identifier for the program URL.</small>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="programAgeRange" class="form-label">Target Age Range (e.g., 16-30)</label>
                <input type="text" class="form-control" id="programAgeRange" name="ageRange" placeholder="e.g., Ages 12-18">
              </div>
              <div class="col-md-6 mb-3">
                <label for="programStatus" class="form-label">Program Status</label>
                <select class="form-select" id="programStatus" name="status">
                  <option value="Active">Active</option>
                  <option value="Upcoming">Upcoming</option>
                  <option value="Closed">Closed</option>
                </select>
              </div>
            </div>

            <div class="mb-3">
              <label for="programShortDescription" class="form-label">Short Description (Lead Paragraph)</label>
              <textarea class="form-control" id="programShortDescription" name="shortDescription" rows="3" required></textarea>
            </div>

            <div class="mb-3">
              <label for="programImage" class="form-label">Program Image</label>
              <input type="file" class="form-control" id="programImage" name="image" accept="image/*">
              <img id="programImagePreview" class="img-preview mt-2" alt="Image Preview">
            </div>

            <div class="mb-3">
              <label for="programFullDescription" class="form-label">Full Program Description / Components</label>
              <div id="programFullDescriptionEditor" style="height: 300px;"></div>
              <textarea class="d-none" id="programFullDescription" name="fullDescription"></textarea> <small class="form-text text-muted">For detailed content, components, and impact sections.</small>
            </div>

            <div class="d-flex justify-content-end">
              <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-1"></i> Create Program
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

